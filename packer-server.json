{
    "variables": {
        "iso_url": "https://geo.mirror.pkgbuild.com/iso/latest/archlinux-{{isotime \"2006.01\"}}.01-x86_64.iso",
        "iso_checksum_url": "https://geo.mirror.pkgbuild.com/iso/latest/sha1sums.txt",
        "install_mirror": "https://geo.mirror.pkgbuild.com/$repo/os/$arch",
        "disk_size": "20480",
        "headless": "true",
        "boot_wait": "40s",
        "filesystem": "xfs",
        "disk_type": "regular",
        "admin_user": "vagrant",
        "admin_pass": "vagrant"
    },
    "builders": [
        {
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "file:{{user `iso_checksum_url`}}",
            "type": "qemu",
            "name": "libvirt",
            "cpus": 2,
            "memory": 1024,
            "disk_interface": "virtio",
            "disk_size": "{{user `disk_size`}}",
            "disk_compression": true,
            "net_device": "virtio-net",
            "headless": "{{user `headless`}}",
            "http_directory": "./",
            "boot_wait": "{{user `boot_wait`}}",
            "boot_command": [
                "<enter><enter>",
                "systemctl stop sshd.service<enter><wait>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/archlinux-reinstall.tar.gz'<enter><wait>",
                "mkdir archlinux-reinstall && tar -xf archlinux-reinstall.tar.gz -C archlinux-reinstall<enter><wait>",
                "cd archlinux-reinstall<enter><wait>",
                "echo 'Server = {{user `install_mirror`}}' > etc/pacman.d/mirrorlist<enter><wait>",
                "./install-server.sh && systemctl reboot<enter>vda<enter>legacy<enter>{{user `filesystem`}}<enter>{{user `disk_type`}}<enter><enter>{{user `admin_user`}}<enter>{{user `admin_user`}}<enter>{{user `admin_pass`}}<enter><enter><wait>"
            ],
            "ssh_username": "{{user `admin_user`}}",
            "ssh_password": "{{ user `admin_pass`}}",
            "ssh_port": 22,
            "ssh_timeout": "3600s",
            "shutdown_command": "sudo systemctl poweroff"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "output/archlinux-server-{{user `filesystem`}}_{{isotime \"2006.01.02\"}}-{{ .Provider }}.box"
        }
    ]
}
